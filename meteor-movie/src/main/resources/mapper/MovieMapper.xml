<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meteor.movie.mapper.MovieMapper">

    <select id="selectIdTitleByIds"
            resultType="com.meteor.movie.mapper.row.MovieIdTitleRow">

        select id, title
        from movie
        where deleted = 0
        and id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>

    </select>
</mapper>
